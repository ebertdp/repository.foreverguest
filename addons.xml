<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.audio.googlemusic.exp"
       name="Google Music EXP"
       version="1.4.1"
       provider-name="ForeverGuest">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="xbmc.addon" version="12.0.0"/>
    <import addon="plugin.video.youtube" version="5.1.1" optional="true"/>
    <import addon="script.module.decorator" version="3.4.0"/>
    <import addon="script.module.requests" version="1.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Experimental Google Music audio plugin</summary>
    <description lang="en">Plugin that lets you play music from Google Music.</description>
  </extension>
</addon>

<addon id="repository.foreverguest" name="foreverguest Add-ons" version="1.0.0" provider-name="foreverguest">
    <extension point="xbmc.addon.repository" name="foreverguest Add-ons">
        <info compressed="true">https://github.com/foreverguest/repository.foreverguest/raw/master/addons.xml</info>
        <checksum>https://github.com/foreverguest/repository.foreverguest/raw/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/foreverguest/repository.foreverguest/master/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>foreverguest Add-ons</summary>
        <platform>all</platform>
    </extension>
</addon>
</addons>
